# Telegram Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Home Assistant
HA_URL=http://192.168.1.100:8123
HA_TOKEN=your_ha_token_here

# LLM Integration (Optional - for intelligent responses)
ANTHROPIC_API_KEY=your_anthropic_key_here
LLM_MODEL=claude-3-5-haiku-20241022
ENABLE_LLM=true
MAX_DAILY_LLM_CALLS=100

# Nextcloud Integration (Optional - for document management)
NEXTCLOUD_URL=http://192.168.1.100:8080/nextcloud
NEXTCLOUD_USERNAME=your_username
NEXTCLOUD_PASSWORD=your_app_password
NEXTCLOUD_ENABLED=true

# System Settings
LOG_LEVEL=INFO
ENABLE_CACHING=true
CACHE_TTL=300

# Database
DATABASE_PATH=data/homeai.db

# Monitoring & Alerts
ENABLE_PROACTIVE_ALERTS=true
MOTION_ALERT_DELAY=300
DOOR_OPEN_ALERT_DELAY=1800
WATER_LEAK_ALERT=true

# Energy Tracking
ENABLE_ENERGY_TRACKING=false
ENERGY_COST_PER_KWH=0.15

# Automation
ENABLE_PATTERN_LEARNING=true
AUTO_AWAY_MODE=true
AUTO_ARRIVAL_MODE=true

# Voice & Media
ENABLE_VOICE_PROCESSING=false
ENABLE_IMAGE_ANALYSIS=false

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
MAX_REQUESTS_PER_HOUR=500

# Backup
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
